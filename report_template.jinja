<!DOCTYPE html>
<html>
<head>
    <title>Access Log Report for {{ domain }}</title>
</head>
<body>
    <h1>Access Log Report for {{ domain }}</h1>

    <h2>Daily Access Counts</h2>
    <table border="1">
        <thead>
            <tr>
                <th>Date</th>
                <th>Total Count</th>
            </tr>
        </thead>
        <tbody>
            {% for date, daily_count, hourly_breakdown in daily_access %}
            <tr>
                <td>{{ date }}</td>
                <td>{{ daily_count }}</td>
            </tr>
            <tr>
                <td colspan="2">
                    <table>
                        <thead>
                            <tr>
                                <th>Time Range</th>
                                <th>Count</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for hour, count in hourly_breakdown.items() %}
                            <tr>
                                <td>{{ hour|time_range }}</td>
                                <td>{{ count }}</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <h2>Popular Pages</h2>
    <table border="1">
        <thead>
            <tr>
                <th>Page</th>
                <th>Count</th>
            </tr>
        </thead>
        <tbody>
            {% for page, count in popular_pages %}
            <tr>
                <td>{{ page }}</td>
                <td>{{ count }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <h2>Top Errors</h2>
    <table border="1">
        <thead>
            <tr>
                <th>Error Message</th>
                <th>Count</th>
            </tr>
        </thead>
        <tbody>
            {% for error_message, count in top_errors %}
            <tr>
                <td>{{ error_message }}</td>
                <td>{{ count }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</body>
</html>
