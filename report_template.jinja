<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ domain }} Stats</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        h1 {
            background-color: #007bff;
            color: #fff;
            padding: 10px;
            text-align: center;
        }

        h2 {
            margin-top: 30px;
            border-bottom: 1px solid #ccc;
            padding-bottom: 10px;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        table, th, td {
            border: 1px solid #ccc;
        }

        th, td {
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>{{ domain }} Statistics</h1>

        <h2>Daily Access Counts</h2>
        <table>
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Total Count</th>
                </tr>
            </thead>
            <tbody>
                {% for date, daily_count in daily_access %}
                    <tr>
                        <td>{{ date.strftime("%Y-%m-%d") }}</td>
                        <td>{{ daily_count }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <h2>Hourly Access Counts</h2>
        <table>
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Hour</th>
                    <th>Count</th>
                </tr>
            </thead>
            <tbody>
                {% for date, hourly_breakdown in hourly_access %}
                    {% for hour, count in hourly_breakdown.items() %}
                        <tr>
                            <td>{{ date.strftime("%Y-%m-%d") }}</td>
                            <td>{{ hour }}</td>
                            <td>{{ count }}</td>
                        </tr>
                    {% endfor %}
                {% endfor %}
            </tbody>
        </table>

        <h2>Popular Pages</h2>
        <table>
            <thead>
                <tr>
                    <th>Page</th>
                    <th>Count</th>
                </tr>
            </thead>
            <tbody>
                {% for page, count in popular_pages %}
                    <tr>
                        <td>{{ page }}</td>
                        <td>{{ count }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <h2>Top Errors</h2>
        <table>
            <thead>
                <tr>
                    <th>Error Message</th>
                    <th>Count</th>
                </tr>
            </thead>
            <tbody>
                {% for error_message, count in top_errors %}
                    <tr>
                        <td>{{ error_message }}</td>
                        <td>{{ count }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</body>
</html>
